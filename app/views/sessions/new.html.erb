<header id="content-header">
  <h1>Sign In</h1>
</header>

<%= form_tag(session_path) do %>
<fieldset>
  <p>
    <%= label_tag :email_or_username, "Email or Username" %>
    <%= text_field_tag :email_or_username, nil, :autofocus => true, :required => true %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, :required => true %>
  </p>
  <p>
    <%= submit_tag "Sign In" %>
  </p>
  <p>
    No account yet? <%= link_to "Sign Up", signup_path %>    
  </p>
</fieldset>
<% end %>

